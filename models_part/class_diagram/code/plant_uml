class ImageCaptureModule {
    -imageBuffer: ImageBuffer               'Abstract Data Type'
    -resolution: Resolution                 'Abstract Data Type'
    
    +triggerCapture() : void
    +setResolution(width, height)
    +get_image() : Image                    'Assume a Image/Photo type'
    +reveiw_image(): bool                   
}
class OCRProcessingEngine {
    -accuracy: float
    
    +process_image(Image: image)
    +extract_text()
    +manage_fonts()
    +process_pdf()
}
class TextAnalysisModule {
    -keywords: List<string>


    +find_keywords(List<string>)
    +highlight_keywords(List<Start_keyword_loc, End_keyword_loc>)
    +searchPhrase(phrase)
    +wrap_for_LLM(text)
}
class Image_Class {
    -image : Image
    -width : int
    -height: int
}

' Relations '
ImageCaptureModule --> "creates" Image_Class
Image_Class -->"Analysis" OCRProcessingEngine 
OCRProcessingEngine-->"process" TextAnalysisModule


class LLMRequest {
    -text
    -parameters
    
    +LLM_request(Text text, Parameters, parameters)
}
class LLMResponse {
    -summary: string
